<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nested_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pmp.jasmina.domashna1.MainActivity">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Enter Twitter search query here"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Tag your query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="8"
            android:background="@android:color/background_light"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_weight="1"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@android:color/holo_orange_light">

        <TextView
            android:text="Tagged Searches"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:padding="10dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="6"
            android:columnCount="2"
            android:padding="3dp">

            <Button android:text="AndroidEP"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="Edit"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                />
            <Button android:text="Deitel"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="Edit"
                android:layout_height="wrap_content"
                android:layout_width="65dp" />

            <Button android:text="Google"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="Edit"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="iPhoneFP"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="Edit"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="JavaFP"
                android:layout_height="wrap_content"
                android:layout_width="260dp" />

            <Button android:text="Edit"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="JavaHTP"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                />

            <Button android:text="Edit"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                />


        </GridLayout>

    </LinearLayout>

    <Button
        android:text="Igraj kviz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnIgrajKviz"
        android:onClick="prikaziKviz"/>


</LinearLayout>
